    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Node: React",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run-script",
            "start"
        ],
        "port": 3000,
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        }
    ]
}